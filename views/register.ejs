<!doctype html>
<html lang="ar" dir="rtl">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>LoginPage</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link href="css/login.css" rel="stylesheet">
</head>

<body>
  <form class="card row" action="/register" method="post">
    <div class="col-4 container ">
      <div class="text-center">
        <h1 class="modal-title">הרשמה לסופר משתלם</h1>
      </div>
      <div class="col-md-12">

        <!-- name -->
        <label for="FullName" class="form-label">אנא הכנס/י שם מלא</label>
        <div class="row">
          <div class="col">
            <input name="firstname" type="text" class="form-control " placeholder="שם פרטי" aria-label="First name">
          </div>

          <div class="col">
            <input name="lastname" type="text" class="form-control " placeholder="שם משפחה" aria-label="Last name">
          </div>

        </div>
        <!-- UserName -->
        <label for="inputEmail4">שם משתמש</label>
        <input name="Username" type="username" class="form-control" >
        <!-- <div class="invalid-feedback"> -->

        <!-- <div id="emailHelp" class="form-text">אל תדאג/י, לא נשתף את המייל שלך</div> -->
      </div>
      <!-- password -->
      <div class="col-12">
        <label for="inputPassword" class="form-label">סיסמא</label>
        <input name="password" type="password" class="form-control" >
        <div id="emailHelp" class="form-text">סיסמה בת 5 תווים, מספרים בלבד.</div>
      </div>

      <!-- phoneNumber -->
      <div class="col-12">
        <label for="inputAddress" class="form-label">מספר טלפון</label>
        <input name="phonenum" type="text" class="form-control" placeholder="012-3456789">
      </div>

      <!-- city -->
      <div class="col-12">
        <label for="inputCity" class="form-label" >עיר מגורים</label>
        <input name="city" type="text" class="form-control" >
      </div>

      <!-- gender -->
      <div class="col-12 form-check">
        <label for="inputSex" class="form-label">אנא בחר מין</label>
      </div>
      <div class="form-check form-check-reverse form-check-inline">
        <input class="form-check-input" type="radio" name="genderr" id="male" value="option1">
        <label class="form-check-label" for="inlineRadio1">זכר</label>
      </div>
      <div class="form-check form-check-inline form-check-reverse">
        <input class="form-check-input" type="radio" name="genderr" id="female" value="option2">
        <label class="form-check-label" for="inlineRadio2">נקבה</label>
      </div>
    <div class="d-grid gap-3 col-1 mx-auto">
      <button type="submit" class="btn btn-primary">הירשם</button>
    </div>
    <div class="text-center">
      כבר רשום אצלנו? <a href="/login"> התחבר</a>
    </div>
  </form>
</body>

</html>